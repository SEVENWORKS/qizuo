<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qizuo.provider.service.dao.CommonDao">
    <!-- 专属字段 -->
    <sql id="exclusiveColumns">
        <include refid="CommonColumns.commonColumns"/>,
    </sql>
    <!-- 查找单个 -->
    <select id="query" resultType="com.qizuo.provider.model.po.CommonPoJo">
        select
        <include refid="exclusiveColumns"/>
        from common a
        <where>
            a.BASE_ID=#{baseId}
            and a.BASE_STATUS=0
        </where>
        limit 1
    </select>
    <!-- 查找列表 -->
    <select id="qList" resultType="com.qizuo.provider.model.po.CommonPoJo">
        select
        <include refid="exclusiveColumns"/>
        from common a
        <where>
            and a.BASE_STATUS=0
        </where>
        <if test="orderBy != null and orderBy != ''">
            order by ${orderBy}
        </if>
    </select>
    <!-- 查找分页 -->
    <select id="qPageQZ" resultType="com.qizuo.provider.model.po.CommonPoJo">
        select
        <include refid="exclusiveColumns"/>
        from common a
        <where>
            and a.BASE_STATUS=0
            <if test="entity != null">

            </if>
        </where>
        <if test="entity != null and entity.orderBy != null and entity.orderBy != ''">
            order by ${entity.orderBy}
        </if>
    </select>
    <!-- ********************************************************************************************************************** -->
    <!-- 插入 -->
    <insert id="insert">
        insert into common
        (
            BASE_ID,
            BASE_CREATE_USER_ID,
            BASE_CREATE_TM,
            BASE_STATUS,
            BASE_REMARKS,
            BASE_CREATE_IP,
            NAME,
            MENU_IDS,
            DATA_SCOPE_CDS,
            JUMP_URL,
            INDEX_URL
        )
        values
            (
                #{baseId},
                #{baseCreateUserId},
                now(),
                #{baseStatus},
                #{baseRemarks},
                #{baseCreateIp},
                #{name},
                #{menuIds},
                #{dataScopeCds},
                #{jumpUrl},
                #{indexUrl}
            )
    </insert>
    <!-- 修改 -->
    <update id="update">
        update common set
                            BASE_UPDATE_USER_ID=#{baseUpdateUserId},
                            BASE_UPDATE_TM=now(),
                            BASE_REMARKS=#{baseRemarks},
                            BASE_UPDATE_IP=#{baseUpdateIp},
                            NAME=#{name},
                            MENU_IDS=#{menuIds},
                            DATA_SCOPE_CDS=#{dataScopeCds},
                            JUMP_URL=#{jumpUrl},
                            INDEX_URL=#{indexUrl}
        where BASE_ID=#{baseId}
    </update>
    <!-- 删除 -->
    <delete id="delete">
        delete from common where BASE_ID=#{baseId}
    </delete>
    <!-- 更新状态 -->
    <update id="uStatus">
        update common set BASE_STATUS=#{baseStatus} where BASE_ID=#{baseId}
    </update>
    <!-- ********************************************************************************************************************** -->
</mapper>